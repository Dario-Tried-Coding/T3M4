{
  "name": "@t3m4/core",
  "version": "0.0.0",
  "private": false,
  "description": "",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "check-types": "tsc --noEmit"
  },
  "author": "dariotriedcoding",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Dario-Tried-Coding/T3M4"
  },
  "keywords": [
    "theming",
    "typescript"
  ],
  "exports": {
