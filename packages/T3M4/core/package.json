      "types": "./dist/generated/boot.d.ts",
      "default": "./dist/generated/boot.js"
    }
  },
  "dependencies": {
    "@t3m4/common": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
